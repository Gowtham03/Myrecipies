<%= render 'shared/page_title', title: "Your Profile" %>
<%= render 'shared/page_title', title: "Chef #{@chef.chefname}'s profile" %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @chef, size: 150 %>
  </div>
</div>

<h4 align="center"><%= @chef.chefname %>'s recipes</h4>
 <div class="btn btn-danger del" ><%= link_to "Delete my profile", chef_path(@chef),method: :delete, 
        data: {confirm: "Are you sure you want to delete this chef and all associated recipes?"} %></div>
        
<%= render 'recipes/recipe', obj: @chef.recipes %>
